<table>

  <% @favorite_books[0..8].in_groups_of(3, false).each do |group| %>

    <tr>     
        
        <% group.each do |book| %>
          <td style="padding-right: 5px !important">
          <%= link_to book_path(book) do %>
            <%= image_tag("books/#{book.image_name}.jpg", alt: 'Example', class: "book_cover") %>
          <% end %>
          </td>
        <% end %>

    </tr>

  <% end %>
</table>
<%= link_to "See all", show_favorite_books_path(@user) %>